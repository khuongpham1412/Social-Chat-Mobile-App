<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/users"
        android:layout_width="@dimen/size_layout_70dp"
        android:layout_height="@dimen/size_layout_70dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="@dimen/size_margin_17dp"
        android:layout_marginEnd="@dimen/size_margin_10dp"
        android:src="@drawable/tomioka" />

    <TextView
        android:id="@+id/name"
        android:layout_width="@dimen/size_layout_100dp"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:layout_below="@+id/users"
        android:layout_marginStart="@dimen/size_margin_10dp"
        android:text="@string/username"
        android:textSize="@dimen/size_text_15sp"/>

</RelativeLayout>











